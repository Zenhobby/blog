<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lx.blog.dao.EssayDao">
	<select id="getEssayList" parameterType="long" resultType="essay">
		select * from essay where user_id = #{userId}
	</select>
	<select id="getEssayCount" parameterType="long" resultType="long">
		select count(*) from essay where user_id = #{userId}
	</select>
</mapper>